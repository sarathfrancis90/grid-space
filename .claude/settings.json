{
  "model": "claude-opus-4-6",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "npx prettier --write \"$FILEPATH\" 2>/dev/null || true",
            "timeout": 10000
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/verify-tests.sh 2>/dev/null || true",
            "timeout": 120000
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/protect-files.sh \"$FILEPATH\" 2>/dev/null || true",
            "timeout": 5000
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "vtsls@claude-code-lsps": true
  }
}
